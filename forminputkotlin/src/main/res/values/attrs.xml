<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="FormInputLayout">
        <attr name="form_hint" format="string" />
        <attr name="form_label" format="string" />
        <attr name="form_value" format="string" />
        <attr name="form_text" format="string" />
        <attr name="form_background" format="reference"/>
        <attr name="form_showValidIcon" format="boolean"/>

        <attr name="form_errorView" format="reference"/>

        <attr name="form_valueOnLoad" format="string" />
        <attr name="form_textColor" format="color" />
        <attr name="form_textColorHint" format="color"/>
        <attr name="form_textColorLabel" format="color"/>
        <attr name="form_progressColor" format="reference" />
        <attr name="form_showProgress" format="boolean" />
        <attr name="form_cornerRadius" format="integer" />

        <attr name="form_maxLines" format="integer" />
        <attr name="form_height" format="dimension" />
        <attr name="form_isMandatory" format="boolean" />
        <attr name="form_maxLength" format="integer"/>
        <attr name="form_isMultiLine" format="boolean"/>
        <attr name="form_array" format="reference"/>

        <attr name="form_showPassStrength" format="boolean"/>
        <attr name="form_passLength" format="integer"/>

        <attr name="form_showTips" format="boolean"/>
        <attr name="form_enforceRules" format="boolean"/>

        <attr name="form_inputType" format="integer">
            <enum name="text" value="1" />
            <enum name="phoneNumber" value="2" />
            <enum name="number" value="3" />
            <enum name="email" value="4" />
            <enum name="password" value="5" />
            <enum name="url" value="6" />
            <enum name="multiLine" value="7" />
        </attr>

        <attr name="form_bottomTextSize" format="dimension" />
        <attr name="form_showClearButton" format="boolean" />
        <attr name="form_showLabel" format="boolean" />

    </declare-styleable>
</resources>
